<%= title_with_action_button "Jornadas de trabajo", "Nueva jornada", new_workday_path%>

<div class="card flex flex-col">
  <% @workdays.each_with_index do |workday, index|%>
  <div class="<%= class_names("flex justify-between", "pb-2 mb-2 border-b": index != @workdays.size - 1) %>">
    <div>
      <%= link_to workday do%>
      <%= workday.title.capitalize %>
      <% end %>
    </div>
    <%= link_to "Eliminar", workday, class: "text-red-400",  method: :delete, data: {confirm: "¿Estás seguro de eliminar la jornada? Se perderán todos los datos" }%>
  </div>
  <% end %>
</div>