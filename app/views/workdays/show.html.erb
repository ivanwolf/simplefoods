<div class="p-32">
  <div class="flex items-center mb-4">
    <%= link_to workdays_path, class: "border rounded p-2 mr-4 hover:bg-gray-50" do%>
    <%= image_tag("icons/ArrowLeftMinor.svg", class: "h-6")%>

    <%end %>
    <h1 class="text-3xl">Jornada: <%= @workday.work_date %></h1>
  </div>
  <div class="grid gap-4 grid-cols-4">
    <% @workday.workday_products.each do |wd_product| %>
    <div
      class="border h-40 w-full bg-white rounded-lg p-4 flex flex-col items-center justify-center hover:bg-gray-50 cursor-pointer">

      <h2 class="text-xl"><%= wd_product.product.name %></h2>
      <h2 class="text-xl">Precio: <%= currency_formatter(wd_product.product.price) %></h2>
      <h2 class="text-xl">Stock: <%= wd_product.stock %></h2>
    </div>
    <% end %>
    <%= link_to new_workday_product_path(workday_id: @workday.id) do %>

    <div
      class="border h-40 w-full bg-white rounded-lg p-4 flex flex-col items-center justify-center hover:bg-gray-50 cursor-pointer">
      <%= image_tag("icons/AddMajor.svg", class: "h-16 mb-2")%>
      <h2 class="text-xl">Agregar un producto</h2>
    </div>
    <% end %>
  </div>
</div>