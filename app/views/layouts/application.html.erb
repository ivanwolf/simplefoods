<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:page_title) ? content_for(:page_title) : "Comida deliciosa" %></title>
    <meta name="description" content="<%= content_for(:meta_description)%>">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="flex h-full">
    <nav class="w-64 bg-yellow-300 shadow-lg pt-32 flex flex-col">

        <%= link_to workdays_path, class: "mb-2 mx-4 px-2 py-2 hover:bg-yellow-400 rounded-lg #{class_names("bg-yellow-400": current_page?(workdays_path))}" do %>
          <%= Workday.model_name.human(count: 2) %>
        <% end %>
        <%= link_to products_path, class: "mx-4 px-2 py-2 hover:bg-yellow-400 rounded-lg #{class_names("bg-yellow-400": current_page?(products_path))}" do %>
          <%= Product.model_name.human(count: 2) %>
        <% end %>
    </nav>
    <div class="bg-gray-100 w-full">
    <%= yield %>
    </div>
  </body>
</html>
