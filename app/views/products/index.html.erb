<div class="pt-32 px-16">
  <h1 class="text-3xl mb-4">Productos</h1>
  <div class="flex">
    <% @products.each do |product| %>
    <div
      class="border w-48 bg-white rounded-lg p-2 flex flex-col items-center justify-center mr-4">
      <% if product.cover_photo.attached?%>
      <%= image_tag product.cover_photo.variant(gravity: "center", resize: "400x400^", crop: '400x400+0+0'), class: "w-40 overflow-hidden rounded-lg mb-2" %>
      <% end %>
      <div class="w-full flex justify-between">
        <div class="text-xl"><%= product.name %></div>
        <div class="text-xl"><%= currency_formatter(product.price) %></div>
      </div>
      <%= link_to "Eliminar", product, class: "text-red-400",  method: :delete, data: {confirm: "¿Estás seguro de eliminar el producto?" }%>
    </div>
    <% end %>
    <%= link_to new_product_path do %>
    <div
      class="border h-40 w-full bg-white rounded-lg p-4 flex flex-col items-center justify-center hover:bg-gray-50 cursor-pointer">
      <%= image_tag("icons/AddMajor.svg", class: "h-16 mb-2")%>
      <h2 class="text-xl">Agregar un producto</h2>
    </div>
    <% end %>
  </div>
</div>