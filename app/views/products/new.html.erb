<%= title_with_back_button "Agregar producto" %>

<div class="card w-96">
  <%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :price, type: :integer %>
  <label>Foto</label>
  <%= f.file_field :cover_photo, class: "mb-2" %>

  <%= f.submit type: :submit, class: "px-4 py-2 rounded-md bg-yellow-500 text-white cursor-pointer" %>
  <% end %>
</div>